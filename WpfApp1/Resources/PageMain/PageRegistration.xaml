<Page x:Class="WpfApp1.Resources.PageMain.PageRegistration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Resources.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно регистрации">

    <Grid>
        <Button Name="BtnBack" Content="Назад"
                Width="50"
        Height="25"
        Background="Transparent"
        BorderBrush="Transparent"

                Click="BtnBack_Click"
        VerticalAlignment="Top"
        HorizontalAlignment="Right" />

            <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center" >

            <StackPanel
	    Orientation="Horizontal"
        HorizontalAlignment="Center">

                <TextBlock
		Text="Введите логин:" 
		Width="150" />
                <TextBox Name="TxbLogin" />
            </StackPanel>

            <StackPanel 
	    Orientation="Horizontal"
        HorizontalAlignment="Center"
        Margin="5,0,5,0">
                <TextBlock
		Text="Введите пароль:"
		Width="150" />

                <TextBox Name="TxbPassword"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
        Margin="5,5,5,0">
                <TextBlock
        Text="Повторите пароль:"
        Width="150" />
                <PasswordBox PasswordChanged="PsbPassword_PasswordChanged" Name="PsbPassword"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
	    Orientation="Horizontal"
        Margin="0,5,5,0">
                <Button
                    IsEnabled="False"
            Name="BtnCreate"
                    Click="BtnCreate_Click"
            Margin="5,0,5,5"
		Content="Создать" 
        Style="{StaticResource AcceptButton}"  />
              
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
