<Page x:Class="WpfApp1.Resources.PageMain.PageTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Resources.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно преподавателя">

    <Grid>
        <Button
		Name="BtnBack"
		Content="Назад"
		Style="{StaticResource BtnTransparent}"
            Click="BtnBack_Click"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Добавить студента" Name="BtnAddStudent" Click="BtnAddStudent_Click"/>
            <Button Content="Добавить оценку" Name="BtnAddEvaluation" Click="BtnAddEvaluation_Click"/>
            <Button Content="Список студентов"/>
            <Button Content="Редактировать оценки"/>
            <Button Content="Удалить студента"/>
            <Button/>
        </StackPanel>
    </Grid>
</Page>
