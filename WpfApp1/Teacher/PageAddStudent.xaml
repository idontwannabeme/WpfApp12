<Page x:Class="WpfApp1.Resources.PageMain.PageAddStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Resources.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление студента">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  Orientation="Horizontal">
                <TextBlock Width="150px"  Text="Введите ФИО"/>
                <TextBox Name="TxbNameStudent" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="150px"  Text="Специальность"/>
                <ComboBox Name="CmbSpecial" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="150px"  Text="Год поступления"/>
                <ComboBox Name="CbmYear"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="150px"  Text="Форма обучения"/>
                <ComboBox Name="CbmFormTime"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="150px"  Text="Название группы"/>
                <ComboBox Name="CbmNameGroup"/>
                
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
                <Button Content="Создать студента" Style="{StaticResource AcceptButton}"
                        Name="BtnAddStudent"
                        Click="BtnAddStudent_Click"/>
                
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
